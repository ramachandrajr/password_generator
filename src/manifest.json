{
  "manifest_version": 2,

  "name": "Password Generator",
  "description": "This extension Creates passwords and fills them in the input forms.",
  "version": "1.0",

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "default_title": "passWord"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}